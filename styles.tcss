Screen {
    background: #0b0f14;
    color: #e8eef5;
}

#topbar {
    height: 3;
    padding: 0 1;
    align: left middle;
}

#title {
    content-align: left middle;
    text-style: bold;
    width: 1fr;
}

.top_actions {
    width: auto;
    align: right middle;
    padding-right: 1;
}

#timer_panel {
    padding: 1 2;
    height: 1fr;
}

#pills {
    height: 3;
    align: left middle;
    padding: 0 0 1 0;
}

Pill {
    background: #121a24;
    border: round #1f2b3a;
    padding: 0 1;
    margin-right: 1;
    text-style: bold;
}

/* --- Main Timer Layout: Start | Grid | Time | End --- */

#timer_display_row {
    height: 20;
    align: center middle;
    margin-bottom: 1;
    padding: 1;
}

.time_col {
    width: 16;
    height: 100%;
    align: center middle;
}

.left_col {
    /* Optional specific styling for left column */
    align: left middle;
}

.right_col {
    /* Optional specific styling for right column */
    align: right middle;
}

.grid_col {
    width: auto;
    height: 100%;
    align: center middle;
    margin: 0 2;
}

.digits_col {
    width: auto;
    height: 100%;
    align: center middle;
    margin: 0 2;
}

#tomato_bar {
    text-align: center;
    color: #e06c75;
    height: auto;
    width: auto;
    /* Ensure font allows emojis to stack nicely if needed, mostly handled by terminal */
}

#time_big {
    color: #61afef;
    height: auto;
    width: auto;
    min-width: 20;
    text-style: bold;
    content-align: center middle;
}

.time_label_header {
    color: #5c6370;
    text-style: bold;
    margin-bottom: 1;
}

.time_value {
    color: #e5c07b;
    text-style: bold;
}

/* ---------------------------------------------------- */

#adjust_row {
    margin-top: 1;
    height: 3;
    align: center middle;
}

#buttons_row {
    margin-top: 1;
    height: 3;
    align: left middle;
}

#task_row {
    margin-top: 1;
    height: 3;
    align: left middle;
}

#task_label {
    width: 16;
    content-align: left middle;
    color: #a9b7c6;
}

Input {
    border: round #1f2b3a;
    background: #0f151f;
}

Button {
    margin-right: 1;
}

#history_panel {
    padding: 1 2;
}

#history_title {
    text-style: bold;
    height: 2;
}

#history_subtitle {
    color: #a9b7c6;
    height: 2;
    margin-bottom: 1;
}

DataTable {
    border: round #1f2b3a;
    height: 1fr;
}

/* Modal */
#modal_card {
    width: 70%;
    max-width: 80;
    background: #0f151f;
    border: round #2a3a4c;
    padding: 1 2;
}

#modal_title {
    text-style: bold;
    height: 2;
}

.modal_body {
    margin-top: 1;
}

.field_label {
    width: 22;
    content-align: left middle;
    color: #a9b7c6;
}

.modal_actions {
    margin-top: 1;
    align: right middle;
}
